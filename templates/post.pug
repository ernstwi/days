-
    let file, date, time, id;
    if (hour === undefined) {
        file = `content/${year}/${month}/${day}/allday.md`;
        date = new Date(Date.UTC(year, month-1, day));
        time = 'all day';
        id = `/${year}/${month}/${day}`;
    } else {
        file = `content/${year}/${month}/${day}/${hour}-${minute}-${second}.md`;
        date = new Date(Date.UTC(year, month-1, day, hour, minute));
        time = dateFormat(date, 'UTC:HH:MM');
        id = `/${year}/${month}/${day}/${hour}/${minute}/${second}`;
    }

.post
    block content
    block action
    .post-footer
        .post-info
            span= dateFormat(date, 'UTC:ddd').toLowerCase()
            span= dateFormat(date, 'UTC:dd/mm')
            span= dateFormat(date, 'UTC:yyyy')
            span= time
            block link
            span(
                class = favorites.has(id) ?
                    ['fav', 'active'] :
                    ['fav']
                onclick = `fav(this, '${id}')`) â˜…
        block extra
            hr
            .post-info
                - date = fs.statSync(file).birthtime
                span created:
                span= dateFormat(date, 'ddd').toLowerCase()
                span= dateFormat(date, 'dd/mm')
                span= dateFormat(date, 'yyyy')
                span= dateFormat(date, 'HH:MM')
            .post-info
                - date = fs.statSync(file).mtime
                span edited:
                span= dateFormat(date, 'ddd').toLowerCase()
                span= dateFormat(date, 'dd/mm')
                span= dateFormat(date, 'yyyy')
                span= dateFormat(date, 'HH:MM')
