extends stat

block content
    .stat
        each monthData, year in data
            .stat-header!= year
            each dayData, month in monthData
                .stat-header!= new CustomDate(0, month-1).monthString()
                .list
                    each n, day in dayData
                        .item
                            .title!= day
                            .bar
                                .fill(style=`width: ${max == 0 ? 0 : (n/max)*100}%`)
                            .value!= n
